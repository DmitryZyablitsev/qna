.question
  = render @question
  - if current_user && current_user.author_of?(@question)
    = link_to 'Edit question', '#', class: 'edit-question-link'
    = button_to 'Delete question', question_path(@question), method: :delete

p = link_to 'Back', questions_path

.new-answer
  p = render 'answers/form', answer: @answer, question: @question

.answers
  h3 Answers
  .best-answer
    -if @best_answer
      h4 Best Answer
      p= @best_answer.body

  = render @question.answers
